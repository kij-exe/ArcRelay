# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# PostgreSQL Docker Container Configuration
# These variables are used by the PostgreSQL Docker image
POSTGRES_DB=arcrelay
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
PGDATA=/var/lib/postgresql/data/pgdata

# Application Database Connection Configuration
# When running with docker-compose, use 'db' as host
# When running locally, use 'localhost'
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arcrelay
DB_USER=postgres
DB_PASSWORD=postgres

# Circle SDK Configuration
# Get these from Circle Developer Console: https://console.circle.com
CIRCLE_API_KEY=your-circle-api-key
CIRCLE_ENTITY_SECRET=your-circle-entity-secret
CIRCLE_WALLET_SET_ID=your-wallet-set-id

